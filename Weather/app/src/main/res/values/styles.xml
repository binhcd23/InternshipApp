<?xml version="1.0" encoding="utf-8"?>

<resources>
<!--    MainActivity-->
    <style name="WeatherText_Medium_Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweathersans_medium</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="WeatherTitleText_Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweathersans_bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="WeatherTitleText_regular">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweathersans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeatherTitleText_medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweathersans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="WeatherValueText_SemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweathersans_semibold</item>
        <item name="android:textSize">50sp</item>
    </style>
    
    <style name="btn_menu">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/menu</item>
    </style>

    <style name="rev_forecast">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/backgroundshape</item>
    </style>

    <style name="linearLayout_items">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:background">@drawable/backgroundshape</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="flow_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="frameLayout_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/backgroundshape</item>
    </style>

    <style name="search_items">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:background">@drawable/backgroundshape</item>
    </style>

    <style name="lottieAnimationView_items">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

<!--    layout_forecast-->

    <style name="ForecastCardStyle">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="ForecastRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ForecastDayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ForecastTempText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ForecastTempContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="ForecastWeatherIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

<!--    layout_manager-->

    <style name="TitleText_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IconImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="NoteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/txt_note</item>
    </style>

    <style name="NoteIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
</resources>